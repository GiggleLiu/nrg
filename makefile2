#================================================
# system parameters
MODULE = fysics
CPL = f2py
LIBS= -lmkl_intel_lp64 -lmkl_sequential -lmkl_core
SOURCES = fysics.f90
#================================================
all:$(MODULE).so
$(MODULE).so : $(SOURCES)
	$(CPL) -m $(MODULE) -c $(SOURCES) $(LIBS)

#================================================
clean:
	rm -f *.so *.o *.pyh
